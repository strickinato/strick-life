  type="text"
  id="form-date-picker"
  value="<%= defaultDate %>">
<input
  type="hidden"
  id="form-date-actual-date"
  name="post[post_date]"
  value="<%= actualDefaultDate %>">
<button
  id="new-post-button"
  class="submit">Done</button>
